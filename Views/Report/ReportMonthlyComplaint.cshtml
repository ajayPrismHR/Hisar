
@{
    ViewBag.Title = "Monthly Complaint";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style type="text/css">
    #DPaging_previous a {
        background-color: transparent;
    }

    #DPaging_next a {
        background-color: transparent;
    }

    .paginate_button.active .page-link {
        background-color: grey !important;
        border: 1px solid black !important;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        $('#fromDate1').datetimepicker();
        $('#toDate1').datetimepicker();
    });
</script>


<div class="header">
    <h1 class="header-title">
        Raw Complaint
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Resolved Complaint</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Search By</h5>
                <h6 class="card-subtitle text-muted">
                    Search with
                </h6>
            </div>
            <div class="card-body">
                  <div class="row mb-3">
                       <div class="col-12 col-lg-3">
                            <label>Bill Year</label>
                            @Html.DropDownList("ddlMY", new SelectList(Enumerable.Empty<SelectListItem>()), new { @class = "form-control select2", id = "ddlMY" })
                        </div>
                       <div class="col-12 col-lg-3">
                            <label>Division</label>
                            @Html.DropDownList("ddlDivision", new SelectList(Enumerable.Empty<SelectListItem>()), new { @class = "form-control select2", id = "ddlDivision", disabled = "disabled" })
                        </div>
                       <div class="col-12 col-lg-3">
                            <label>Sub Division</label>
                            <select id="ddlSubDivision" class="form-control select2" required>
                            </select>
                        </div>
                       <div class="col-12 col-lg-3">
                             <input type="submit" value="Search" class="btn btn-dark btn-block" id="btnSearch" onclick="searchreq()" />
                       </div>
                  </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">About Raw Complaint</h5>
                <h6 class="card-subtitle text-muted">
                    Description of Report
                </h6>
            </div>
            <div class="card-body">
                <table id="DPaging" class="table table-striped table-sm" style="width:100%">
                    <thead>
                        <tr>
                            <th>S No.</th>
                            <th>Complaint Category Name</th>
                            <th>Total No. of Complaint</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        $('select:not(.normal)').each(function () {
            $(this).select2({
                dropdownParent: $(this).parent()
            });
        });

        $('#ddlMY').select2({
            selectOnClose: true,
            /*placeholder: "Select Division",*/
        });

        $('#ddlDivision').select2({
            selectOnClose: true,
            /*placeholder: "Select Division",*/
        });


        $('#ddlSubDivision').select2({
            selectOnClose: true,
            //placeholder: "Select Sub Division",
        });

        $.ajax({
            type: "GET",
            url: '/Dashboard/ddlMY',
            contentType: "application/json; charset=utf-8",
            datatype: JSON,
            success: function (result) {
                $(result).each(function () {
                    $("#ddlMY").append($("<option></option>").val(this.Value).html(this.Text));
                });
            },
            error: function (data) { }
        });


        $.ajax({
            type: "GET",
            url: '/Dashboard/GetDivision',
            contentType: "application/json; charset=utf-8",
            datatype: JSON,
            success: function (result) {
                $(result).each(function () {
                    $("#ddlDivision").append($("<option></option>").val(this.Value).html(this.Text));
                });
            },
            error: function (data) { }
        });

        $.ajax({
            type: "GET",
            url: '/Dashboard/GetSubDivision',
            contentType: "application/json; charset=utf-8",
            data: { "divisionId": 1 },
            dataType: "json",
            success: function (result) {
                $(result).each(function () {
                    $("#ddlSubDivision").append($("<option></option>").val(this.Value).html(this.Text));
                });
            },
            error: function (data) { }
        });

        $('#ddlDivision').change(function () {
            var selectedDivision = $("#ddlDivision").val();
            $.ajax({
                type: "GET",
                url: '/Dashboard/GetSubDivision',
                contentType: "application/json; charset=utf-8",
                data: { "divisionId" : selectedDivision },
                dataType: "json",
                success: function (result) {
                    $(result).each(function () {
                        $("#ddlSubDivision").append($("<option></option>").val(this.Value).html(this.Text));
                    });
                },
                error: function (data) { }
            });
        });

        $('#ddlSubDivision').change(function () {
            var selectedSubDivision = $("#ddlSubDivision").val();
            var selectedDivision = $("#ddlDivision").val();
            var selectedPeriod = $("#ddlMY option:selected").val();
        });
    });

    function searchreq() {
        var dataObject = new Object();

        dataObject.my = $('#ddlMY').val();
        dataObject.division = $('#ddlDivision').val();
        dataObject.subdivsion = $('#ddlSubDivision').val();

        myTable = $('#DPaging').dataTable({
            "ajax": {
                "url": "/Report/ReportMonthlyComplaintSearch/",
                "type": "POST",
                "datatype": "json",
                "data": function (d) {
                    d.my = dataObject.my;
                    d.division = dataObject.division;
                    d.subdivsion = dataObject.subdivsion;

                }
            },
            "destroy": true,
            "lengthMenu": [[10, 20, 50, 100, 150], [10, 20, 50, 100, 150]],
            "pageLength": 50,
            "processing": true,
            "serverSide": true,
            scrollY: true,
            scrollX: true,
            "searching": false,
            ordering: false,
            "language": {
                "processing": '<i class="fa fa-spinner fa-spin fa-4x fa-fw" style="color:#3B3B96;"></i><span class="sr-only">Loading...</span>'
            },
            dom: 'Blfrtip',
            "columns": [
                { 'data': 'ComplaintNo' },
                { 'data': 'Category_Name' },
                { 'data': 'Customer_Name' }
            ],

        });
    }

</script>
