@if (TempData["AlertMessage"] != null)
{
    <script type="text/javascript">
        var msg = '@TempData["AlertMessage"]'
        alert(msg);
        if (msg.includes("Error")) {
            swal("Error!", msg, "error");
        }
        else {
            $('#submitComplaint').prop('disabled', true);
            swal("Good job!", msg, "success");
        }
    </script>
}

