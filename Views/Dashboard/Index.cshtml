    function showLoginmsg() {
            var message = '@TempData["loginmsg"]';
            var title = "Login Success";
            var type = "success";
            toastr[type](message, title, {
                positionClass: "toast-top-right",
                closeButton: "checked",
                progressBar: "checked",
                newestOnTop: "checked",
                rtl: $("body").attr("dir") === "rtl" || $("html").attr("dir") === "rtl",
                timeOut: 5000
            });
        }

    

        function loadpage() {

